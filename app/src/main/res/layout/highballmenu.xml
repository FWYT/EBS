<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/glassPic"
        android:layout_width="wrap_content"
        android:layout_height="224dp"
        android:src="@drawable/highball"
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/allDrinks"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="ALL DRINKS"
        android:textSize="15sp"
        android:onClick="allDrinks"/>

    <Button
        android:id="@+id/multipleChoice"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="MULTIPLE CHOICE QUIZ"
        android:textSize="15sp"
        android:onClick="multipleChoice"/>

    <Button
        android:id="@+id/guessDrink"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Fill In the Blanks"
        android:textSize="15sp"
        android:onClick="fillBlank"/>

</LinearLayout>